<script src="//api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">My track</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <!-- /.panel -->
      <div class="panel panel-default">
        <div class="panel-heading">
          <i class="fa fa-clock-o fa-fw"></i> Map track
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div id="map" style="width: 100%; height: 400px;"></div>
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <div class="col-lg-12">
      <!-- /.panel -->
      <div class="panel panel-default">
        <div class="panel-heading">
          <i class="fa fa-clock-o fa-fw"></i> List track
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <table class="table table-striped">
            <thead>
            <tr>
              <th>id</th>
              <th>description</th>
              <th>length</th>
              <th>power</th>
              <th>up_meter</th>
              <th>created_at.to_date</th>
            </tr>
            </thead>
            <tbody>
            <% @tracks.each do |track| %>
                <tr class="track" style="cursor: pointer" data-id="<%= track.id %>">
                  <td><%= track.id %></td>
                  <td><%= track.description %></td>
                  <td><%= track.length %></td>
                  <td><%= track.power %></td>
                  <td><%= track.up_meter %></td>
                  <td><%= l track.created_at.to_date %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
          <script type="text/javascript">

            ymaps.ready(init);

            function init() {
              // Создаем карту.
              var myMap = null;
              $('.track').click(function() {
                  if(myMap) {
                    myMap.destroy();
                    myMap = null;
                  }
                  var id = $(this).data('id');

                  myMap= new ymaps.Map("map", {
                    center: [55.72, 37.44],
                    zoom: 10
                  }, {
                    searchControlProvider: 'yandex#search'
                  });

                  $.ajax({
                    url: '/view/'+id,
                    dataType: 'json',
                    center: [1, 1],
                    success: function (data) {
                      var data = data[0] || {};
//                      console.log(data[0][0]);
                      var myPolyline = new ymaps.Polyline(eval(data.coords), {
                        balloonContent: "Ломаная линия"
                      }, {
                        balloonCloseButton: false,
                        strokeColor: "#ff0000",
                        strokeWidth: 6,
                        strokeOpacity: 0.8
                      });
                      myMap.geoObjects
                          .add(myPolyline);
                    }
                  });
              });
              }
          </script>
        </div>
      </div>
      </div>
    </div>
  </div>